<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.lib.fin.schedule.ScheduleDAO">
  	<select id="showSchedule" resultType="ScheduleVO">
  		SELECT
  			SCHEDULE_NO,EMP_NO,SCHEDULE_START_TIME,SCHEDULE_END_TIME,SCHEDULE_CONTENTS,SCHEDULE_TITLE,SCHEDULE_KIND,REG_ID,MOD_ID,REG_DATE,MOD_DATE,USE_YN
  		FROM
  			SCHEDULE_BASE
  		ORDER BY
  			SCHEDULE_NO
  		DESC
  	</select>
  	<insert id="addSchedule" parameterType="ScheduleVO">
  		INSERT INTO
  			SCHEDULE_BASE(SCHEDULE_NO,EMP_NO,SCHEDULE_START_TIME,SCHEDULE_END_TIME,SCHEDULE_CONTENTS,SCHEDULE_TITLE,SCHEDULE_KIND,REG_ID,MOD_ID,REG_DATE,MOD_DATE,USE_YN)
  		VALUE
  			(#{SCHEDULE_NO},#{EMP_NO},#{SCHEDULE_START_TIME},#{SCHEDULE_END_TIME},#{SCHEDULE_CONTENTS},#{SCHEDULE_TITLE},#{SCHEDULE_KIND},'1','1',now(),now(),'y')
  	</insert>
</mapper>